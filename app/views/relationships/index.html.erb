<p id="notice"><%= notice %></p>

<h1>Relationships</h1>

<table>
  <thead>
    <tr>
      <th>Follower</th>
      <th>Followed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @relationships.each do |relationship| %>
      <tr>
        <td><%= relationship.follower_id %></td>
        <td><%= relationship.followed_id %></td>
        <td><%= link_to 'Show', relationship %></td>
        <td>
          <%= link_to 'Destroy', relationship, method: :delete, data: { confirm: 'Are you sure?' } if can?(:destroy, relationship) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Relationship', new_relationship_path %>
